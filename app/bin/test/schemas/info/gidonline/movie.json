{
  "$schema": "http://json-schema.org/draft-07/schema",
  "allOf": [
    {
      "$ref": "../base.json"
    },
    {
      "type": "object",
      "properties": {
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "asyncSource": {
                "type": "object",
                "properties": {
                  "sourceId": {
                    "type": "string",
                    "pattern": "[a-z0-9]+"
                  },
                  "params": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "const": "movie"
                      }
                    },
                    "required": [
                      "type"
                    ]
                  }
                },
                "required": [
                  "sourceId",
                  "params"
                ]
              }
            },
            "required": [
              "asyncSource"
            ]
          }
        }
      }
    }
  ]
}
