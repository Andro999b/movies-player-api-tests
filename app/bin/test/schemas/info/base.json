{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "image": {
      "type": "string",
      "pattern": "^https?://(?:www\\.)?(?:[\\w-]+\\.)+[a-z]{2,}(?:/{1,2}[^/?#]+)+\\.(?:jpg|jpeg|gif|png|webp)$"
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": [
              "integer",
              "string"
            ]
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "path": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "name"
        ]
      },
      "minItems": 1
    },
    "trailer": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": [
    "id",
    "title",
    "image",
    "files",
    "provider"
  ]
}