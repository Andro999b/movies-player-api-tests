{
  "$schema": "http://json-schema.org/draft-07/schema",
  "allOf": [
    {
      "$ref": "../base.json"
    },
    {
      "type": "object",
      "properties": {
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "urls": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "url": {
                      "type": "string",
                      "pattern": "^https://[a-z0-9\\.]+(?:/[^/?#]+)+\\.m3u8$"
                    },
                    "quality": {
                      "enum": [ 0, 240, 360, 480, 720, 1080 ]
                    },
                    "audio": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "required": [
                    "url",
                    "quality"
                  ]
                },
                "minItems": 1
              }
            },
            "required": [
              "urls"
            ]
          }
        }
      }
    }
  ]
}