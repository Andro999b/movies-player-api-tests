{
  "$schema": "http://json-schema.org/draft-07/schema",
  "allOf": [
    {
      "$ref": "../base.json"
    },
    {
      "type": "object",
      "properties": {
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "urls": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "url": {
                      "type": "string",
                      "pattern": "^https://[a-z0-9\\.\\-]+(?:/[^/?#]+)+\\/iframe$"
                    },
                    "hls": {
                      "const": true
                    },
                    "extrractor": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "const": "kinogo"
                        },
                        "params": {
                          "type": "object",
                          "properties": {
                            "file": {
                              "type": "string",
                              "pattern": "\\d,\\d,\\d"
                            }
                          },
                          "required": [
                            "file"
                          ]
                        }
                      },
                      "required": [
                        "type",
                        "params"
                      ]
                    }
                  },
                  "required": [
                    "url",
                    "hls"
                  ]
                },
                "minItems": 1
              }
            },
            "required": [
              "urls"
            ]
          }
        }
      }
    }
  ]
}
