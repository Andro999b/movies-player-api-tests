{
  "$schema": "http://json-schema.org/draft-07/schema",
  "allOf": [
    {
      "$ref": "../base.json"
    },
    {
      "type": "object",
      "properties": {
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "urls": {
                "type": "array",
                "items": {
                  "allOf": [
                    {
                      "type": "object",
                      "properties": {
                        "audio": {
                          "type": "string",
                          "minLength": 1
                        }
                      },
                      "required": [
                        "audio",
                        "url",
                        "extractor"
                      ]
                    },
                    {
                      "anyOf": [
                        {
                          "$ref": "ashdi.json"
                        },
                        {
                          "$ref": "csst.json"
                        },
                        {
                          "$ref": "svideo.json"
                        }
                      ]
                    }
                  ]
                }
              }
            }
          }
        }
      },
      "required": [
        "trailer"
      ]
    }
  ]
}